generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String        @id @default(uuid())
  email      String        @unique
  name       String
  gender     String
  password   String
  birthYear  Int
  createdAt  DateTime      @default(now())
  changedAt  DateTime?     @updatedAt

  trainings  TrainingLog[]
  exercises  ExerciseLog[]
  sets       SetLog[]
  nutrition  NutritionLog[]
  bodyLogs   BodyLog[]
  exerciseScores ExerciseScore[]
  exerciseScoreHistory ExerciseScoreHistory[]
}

model TrainingLog {
  id              String       @id @default(uuid())
  userId          String
  createdAt       DateTime     @default(now())
  changedAt       DateTime?    @updatedAt
  type            String
  notes           String?
  caloriesBurned  Float?
  duration        Int?
  avgHeartRate    Int?
  pauses          Int          @default(0)
  pauseLength     Int          @default(0)

  user            User         @relation(fields: [userId], references: [id])
  exercises       ExerciseLog[]
}

model ExerciseLog {
  id         String        @id @default(uuid())
  userId     String
  trainingId String
  name       String
  avgWeight  Float?
  avgReps    Int?
  Score      Float?
  createdAt  DateTime      @default(now())
  changedAt  DateTime?     @updatedAt
  order      Int           @default(autoincrement())
  notes      String?

  sets       SetLog[]
  user       User          @relation(fields: [userId], references: [id])
  training   TrainingLog   @relation(fields: [trainingId], references: [id], onDelete: Cascade)
}

model SetLog {
  id           String      @id @default(uuid())
  exerciseId   String
  userId       String
  type         String?
  createdAt    DateTime    @default(now())
  changedAt    DateTime?   @updatedAt
  order        Int         @default(autoincrement())
  reps         Int
  weight       Float

  user         User        @relation(fields: [userId], references: [id])
  exercise     ExerciseLog @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
}

model NutritionLog {
  id        String         @id @default(uuid())
  userId    String
  createdAt DateTime       @default(now())
  changedAt DateTime?      @updatedAt
  mealType  String
  kcal      Int
  protein   Int
  carbs     Int
  fat       Int

  user      User           @relation(fields: [userId], references: [id])
}

model BodyLog {
  id         String        @id @default(uuid())
  userId     String
  createdAt  DateTime      @default(now())
  changedAt  DateTime?     @updatedAt
  weight     Float
  height     Float
  fatMass    Float?
  fatPercentage Float?
  muscleMass Float?
  waterMass   Float?
  BMI        Float?
  BMR        Float?

  user       User          @relation(fields: [userId], references: [id])
}

model ExerciseScore {
  id             String      @id @default(uuid())
  userId         String
  exerciseName   String
  lastWeight     Float       // Letztes Gewicht
  lastReps       Int         // Letzte Wiederholungszahl
  factor         Float       @default(1.0) // Faktor für Gewicht / Wiederholungen
  createdAt      DateTime    @default(now())
  changedAt      DateTime?   @updatedAt

  user           User        @relation(fields: [userId], references: [id])

  @@unique([userId, exerciseName])
}

model ExerciseScoreHistory {
  id             String      @id @default(uuid())
  userId         String
  exerciseName   String
  factor         Float       // Faktor für Gewicht / Wiederholungen
  weight         Float       @unique
  reps           Int?        // Wiederholungszahl
  score          Float      // Gesamtpunktzahl

  createdAt      DateTime    @default(now())

  user           User        @relation(fields: [userId], references: [id])
}
